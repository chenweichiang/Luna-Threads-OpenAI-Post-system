# OpenAI API 設定
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-0125-preview

# Threads API 設定
THREADS_APP_ID=your_app_id_here
THREADS_APP_SECRET=your_app_secret_here
THREADS_ACCESS_TOKEN=your_access_token_here

# MongoDB 設定
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=threadsposter

# 系統設定
TIMEZONE=Asia/Taipei
LOG_LEVEL=INFO
DEBUG=False

# AI 參數設定
TEMPERATURE=0.9
TOP_P=0.9
FREQUENCY_PENALTY=0.5
PRESENCE_PENALTY=0.5
MAX_TOKENS=150

# 回應設定
MAX_RESPONSE_LENGTH=20

# 記憶系統設定
MEMORY_RETENTION_DAYS=30
MAX_HISTORY_RECORDS=100
SUMMARY_LENGTH=5

# 角色基本設定
CHARACTER_NAME=可愛的科技宅
CHARACTER_AGE=28
CHARACTER_GENDER=女性
CHARACTER_NATIONALITY=台灣

# 發文時間設定
DAY_RESPONSE_MIN=60
DAY_RESPONSE_MAX=300
NIGHT_RESPONSE_MIN=300
NIGHT_RESPONSE_MAX=1800

# 情感權重設定
POSITIVE_IMPACT=0.2
NEGATIVE_IMPACT=-0.3
NEUTRAL_IMPACT=0.1

# 註解：
# 1. 所有時間相關的設定單位均為秒
# 2. 情感權重範圍為 -1.0 到 1.0
# 3. 溫度設定範圍為 0.0 到 1.0
# 4. 請確保所有 API 金鑰保持安全且定期更換 