# ==================================================
# ThreadsPoster 環境變數配置範例文件
# 版本：v1.1.9
# ==================================================

# ===========================
# OpenAI API 設定
# ===========================

# 專案API密鑰 (sk-proj-開頭，用於直接HTTP請求)
OPENAI_PROJECT_API_KEY=your_openai_project_api_key_here

# OpenRouter API密鑰 (用於訪問Quasar Alpha模型)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# 模型名稱
OPENAI_MODEL=gpt-3.5-turbo
# 令牌限制
OPENAI_MAX_TOKENS=512
# 溫度 (隨機性)
OPENAI_TEMPERATURE=0.8
# 組織ID (如果使用企業帳戶)
OPENAI_ORGANIZATION_ID=your_organization_id_here
# API基礎URL (可選，默認為 https://api.openai.com/v1)
OPENAI_API_BASE=https://api.openai.com/v1

# ===========================
# Threads API 設定
# ===========================
THREADS_API_BASE_URL=https://graph.threads.net/v1.0
THREADS_APP_ID=your_app_id_here
THREADS_APP_SECRET=your_app_secret_here
THREADS_ACCESS_TOKEN=your_access_token_here
THREADS_REDIRECT_URI=http://localhost:8000/callback
THREADS_SCOPES=threads_basic,threads_content_publish,threads_manage_replies,threads_read_replies
THREADS_USER_ID=your_user_id_here

# ===========================
# MongoDB 設定
# ===========================
MONGODB_URI=your_mongodb_uri_here
MONGODB_DB_NAME=threads_db
MONGODB_COLLECTION=posts
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_IDLE_TIME_MS=10000
MONGODB_CACHE_TTL=300

# ===========================
# 系統基本配置
# ===========================
TIMEZONE=Asia/Taipei
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_PATH=logs/threads_poster.log
HOST=localhost
PORT=8000
SESSION_SECRET=your_secure_session_secret_here
TEST_MODE=false
DEBUG_MODE=true
SIMULATE_POSTS=false
REQUEST_TIMEOUT=30

# 其他設定請參考文檔...
