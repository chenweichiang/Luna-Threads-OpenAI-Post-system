# OpenAI 設定
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Threads API 設定
THREADS_APP_ID=your_app_id_here
THREADS_APP_SECRET=your_app_secret_here
THREADS_ACCESS_TOKEN=your_access_token_here
THREADS_USER_ID=your_user_id_here

# MongoDB 設定
MONGODB_URI=your_mongodb_uri
MONGODB_DB_NAME=threads_db
MONGODB_COLLECTION=conversations

# 系統設定
TIMEZONE=Asia/Taipei
LOG_LEVEL=INFO
CHECK_INTERVAL=60
ERROR_WAIT_TIME=300
POST_PROBABILITY=0.1

# AI 設定
TEMPERATURE=0.8
TOP_P=0.9
FREQUENCY_PENALTY=0.5
PRESENCE_PENALTY=0.5
MAX_RESPONSE_LENGTH=20

# 記憶系統設定
MEMORY_RETENTION_DAYS=30
MAX_HISTORY_RECORDS=10

# 角色設定
CHARACTER_NAME=your_character_name
CHARACTER_DESCRIPTION=your_character_description

# 最大重試次數
MAX_RETRIES=3

# 重試延遲（秒）
RETRY_DELAY=60 